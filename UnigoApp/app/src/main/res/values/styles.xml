<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- estilos de botones -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">16dp</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">1.5dp</item>
    </style>

    <!-- card views -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/secondary_dark</item>
    </style>

    <!-- textos -->
    <style name="TextAppearance.App.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="TextAppearance.App.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="TextAppearance.App.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <!-- inputs -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="hintTextAppearance">@style/TextAppearance.App.Body1</item>
    </style>

    <!-- toolbar -->
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:elevation">4dp</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.Headline2</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <!-- bottom nav -->
    <style name="Widget.App.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?attr/colorSurface</item>
        <item name="itemIconTint">@color/primary</item>
        <item name="itemTextColor">@color/primary</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- floating button -->
    <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="tint">?attr/colorOnSecondary</item>
        <item name="elevation">6dp</item>
    </style>
    <!-- popup menu -->
    <style name="Widget.App.PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:textSize">18sp</item>
        <item name="android:popupBackground">@color/surface</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownVerticalOffset">2dp</item>
        <item name="elevation">8dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

</resources>
