<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UnigoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/primary_variant</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorSecondary">@color/secondary_variant</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>
        
        <!-- Background and surface colors -->
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnBackground">#FFFFFF</item>
        <item name="colorOnSurface">#FFFFFF</item>

        <!-- Text appearance -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#B3FFFFFF</item>
        <item name="android:textColorHint">#80FFFFFF</item>

        <!-- System bars -->
        <item name="android:statusBarColor">#000000</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Shape appearance -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.App.LargeComponent</item>

        <!-- Elevation overlays -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">@color/primary_variant</item>
    </style>
</resources>